<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:baselineAligned="false"
        android:weightSum="1">

        <ImageView
            android:id="@+id/contact_icon"
            android:scaleType="centerCrop"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/freepik" />

        <TextView
            android:id="@+id/contact_name"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_toRightOf="@+id/contact_icon"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:text="Contact Name"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/contact_phone"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/contact_name"
            android:layout_toRightOf="@+id/contact_icon"
            android:paddingLeft="20dp"
            android:paddingTop="4dp"
            android:text="Phone"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/contact_mail"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/contact_phone"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/contact_phone"
            android:layout_below="@+id/contact_phone"
            android:paddingLeft="20dp"
            android:paddingTop="4dp"
            android:text="Mail"
            android:textSize="17sp" />




    </RelativeLayout>
</android.support.v7.widget.CardView>