<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/contact_icon_logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:src="@drawable/freepik" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <TextView
                android:id="@+id/firstname_text_edit"
                android:layout_width="300dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="Contact Information"
                android:textAlignment="center"
                android:textColor="#020300"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/name_text_edit"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_alignLeft="@+id/firstname_text_edit"
                android:layout_alignStart="@+id/firstname_text_edit"
                android:layout_below="@+id/firstname_text_edit"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:hint="@string/last_name"
                android:inputType="textPersonName"
                android:textColor="#012"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/phone_text_edit"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_alignLeft="@+id/name_text_edit"
                android:layout_alignStart="@+id/name_text_edit"
                android:layout_below="@+id/name_text_edit"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:hint="@string/phone_number"
                android:inputType="phone"
                android:textColor="#012"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/email_text_edit"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_alignLeft="@+id/phone_text_edit"
                android:layout_alignStart="@+id/phone_text_edit"
                android:layout_below="@+id/phone_text_edit"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:hint="@string/email_adress"
                android:inputType="textEmailAddress"
                android:textColor="#012"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <Button
                android:id="@+id/contact_save_button"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:background="@drawable/save_icon_1"
                android:clickable="true" />

            <Button
                android:id="@+id/contact_photo_add"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="17dp"
                android:layout_marginRight="17dp"
                android:background="@drawable/contact_foto_add"
                android:clickable="true" />

            <Button
                android:id="@+id/contact_add_edit_back_button"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignBaseline="@+id/contact_save_button"
                android:layout_alignBottom="@+id/contact_save_button"
                android:layout_marginEnd="23dp"
                android:layout_marginRight="23dp"
                android:layout_toLeftOf="@+id/contact_save_button"
                android:layout_toStartOf="@+id/contact_save_button"
                android:background="@drawable/undo_back_return_button_png"
                android:clickable="true" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>